function f_disablemod {
  echo "[$i] Disable misc kernel modules"

  CNF="/etc/modprobe.d/disablemod.conf"
  MOD="bluetooth firewire-core net-pf-31 thunderbolt usb-midi usb-storage"
  for disable in $MOD; do
    if ! grep -q "$disable" $CNF 2> /dev/null; then
      echo "install $disable /bin/true" >> $CNF
    fi
  done

  ((i++))
}

