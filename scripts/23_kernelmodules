function f_disablemod {
  echo "[$i] Disable misc kernel modules"

  CNF="/etc/modprobe.d/disablemod.conf"
  MOD="net-pf-31 bluetooth usb-storage"
  for disable in $MOD;
    do
      if ! grep -q "$disable" $CNF 2> /dev/null;
        then
          $SUDO bash -c "echo install $disable /bin/true >> $CNF"
      fi
  done

  ((i++))
}

