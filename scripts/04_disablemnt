function f_disablemnt {
  echo "[$i] Disable misc file systems"

  CNF="/etc/modprobe.d/disablemnt.conf"
  FS="cramfs freevxfs jffs2 hfs hfsplus squashfs udf"
  for disable in $FS;
    do
      if ! grep -q "$disable" $CNF 2> /dev/null;
        then
          echo "install $disable /bin/true" >> $CNF
      fi
  done

  ((i++))
}
