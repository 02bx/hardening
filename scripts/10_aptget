function f_aptget {
  echo "[$i] Updating the package index files from their sources"

  $SUDO $APT update

  ((i++))

  echo "[$i] Upgrading installed packages"

  $SUDO $APT upgrade

  ((i++))
}

function f_aptget_clean {
  echo "[$i] Removing unused packages"

  $SUDO $APT clean
  $SUDO $APT autoclean
  $SUDO apt-get -qq autoremove

  ((i++))
}
