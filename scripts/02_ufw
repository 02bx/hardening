function f_firewall {
  echo "[$i] Enable ufw"

  sed -i 's/IPT_SYSCTL=.*/IPT_SYSCTL=\/etc\/sysctl\.conf/' /etc/default/ufw
  ufw --force enable
  ufw allow log from "$FW_ADMIN" to any port 22 proto tcp

  if [[ $VERBOSE == "Y" ]];
    then
      systemctl status ufw.service
      ufw status verbose
      echo
  fi

  ((i++))
}
