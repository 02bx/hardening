function f_pre {
  RINPUT=$(openssl rand -hex 3)

  if [[ $VERBOSE == "Y" ]]; then
    APTFLAGS='-y'
  else
    APTFLAGS='-qq -y'
  fi

  APT="apt-get $APTFLAGS"

  if [[ $CHANGEME == "" ]]; then
    echo "Please read the code".
    echo
    exit
  fi

  if [ $EUID -ne 0 ]; then
    echo "Not root and not in the sudo group. Exiting."
    echo
    exit
  fi

  if ! lsb_release -i | grep 'Ubuntu'; then
    echo "Ubuntu only. Exiting."
    echo
    exit
  fi

  i="0"
}
