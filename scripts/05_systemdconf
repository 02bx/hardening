function f_systemdconf {
  echo "[$i] Systemd/system.conf and Systemd/user.conf"

  sed -i 's/^#DumpCore=yes/DumpCore=no/' /etc/systemd/system.conf
  sed -i 's/^#CrashShell=no/CrashShell=no/' /etc/systemd/system.conf
  sed -i 's/^#DefaultLimitCORE=/DefaultLimitCORE=0/' /etc/systemd/system.conf
  sed -i 's/^#DefaultLimitNOFILE=/DefaultLimitNOFILE=100/' /etc/systemd/system.conf
  sed -i 's/^#DefaultLimitNPROC=/DefaultLimitNPROC=100/' /etc/systemd/system.conf

  sed -i 's/^#DefaultLimitCORE=/DefaultLimitCORE=0/' /etc/systemd/user.conf
  sed -i 's/^#DefaultLimitNOFILE=/DefaultLimitNOFILE=100/' /etc/systemd/user.conf
  sed -i 's/^#DefaultLimitNPROC=/DefaultLimitNPROC=100/' /etc/systemd/user.conf

  systemctl daemon-reload

  ((i++))
}

