function f_packages {
  echo "[$i] Installing base packages"

  if  dmidecode -q --type system | grep -i vmware;
    then
      VM="open-vm-tools"
  fi

   bash -c "echo postfix postfix/main_mailer_type select Internet Site | debconf-set-selections"
   bash -c "echo postfix postfix/mailname string $(hostname -f) | debconf-set-selections"

   $APT install acct aide-common apparmor-profiles apparmor-utils auditd haveged libpam-cracklib libpam-tmpdir openssh-server postfix $VM

  ((i++))
}
