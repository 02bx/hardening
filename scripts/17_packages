function f_packages {
  echo "[$i] Installing base packages"

  if dmidecode -q --type system | grep -i vmware; then
      VM="open-vm-tools"
  fi

  if dmidecode -q --type system | grep -i virtualbox; then
      VM="virtualbox-guest-dkms virtualbox-guest-utils"
  fi

  bash -c "echo postfix postfix/main_mailer_type select Internet Site | debconf-set-selections"
  bash -c "echo postfix postfix/mailname string $(hostname -f) | debconf-set-selections"

  PACKAGES="acct aide-common apparmor-profiles apparmor-utils auditd haveged libpam-cracklib libpam-tmpdir openssh-server postfix"
  $APT install $PACKAGES $VM --no-install-recommends

  ((i++))
}
