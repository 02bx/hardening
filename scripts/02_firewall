function firewall {
  echo "[$i] Installing firewall."
  $SUDO bash -c "curl -s $FW_SERVICE > /lib/systemd/system/firewall.service"
  $SUDO bash -c "curl -s $FW_POLICY > /sbin/firewall"
  $SUDO sed -i "s/ADMIN=\"127.0.0.1\"/ADMIN=\"$FW_ADMIN\"/" /sbin/firewall
  $SUDO chmod u+x /sbin/firewall
  $SUDO systemctl reenable firewall.service
  $SUDO systemctl start firewall.service

  if [[ $VERBOSE == "Y" ]];
    then
      $SUDO systemctl status firewall.service
      echo
  fi
  ((i++))
}
